.header-re
  height 100vh
  width 100%
  background: #000000
.header-post
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-size: cover
  background-position: center
  overflow hidden  
  opacity .7
.header-post-head
  position: absolute
  top 30%
  width 100%
  text-align: center
  font-size 5rem
  color #FFFFFF
  font-weight: 900
  .header-post-time
    font-size 1.5rem

    


.header_background
  width: 100%
  height: 100vh
  .banner
    font-family: Helvetica,Tahoma,lantinghei sc,Microsoft Yahei,sans-serif
    text-align center
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-size: cover
    background-position: center
    overflow hidden  
  .header-text-container
    position relative
    top:40%
    
  .blog-title .logo 
    position relative
    top -50px
    color: #FFFFFF
    text-shadow 0 1px 2px #000
    font-size: 2em
    font-family Comic Sans MS
    text-decoration: none

  .blog-subtitle .logo 
    color: #FFFFFF
    text-shadow 0 1px 2px #000
    font-size: 2em
    text-decoration: none
  
  .blog-description .logo
    color: #FFFFFF
    font-size: 1em
    text-decoration: none

  .blog-iconfont
    display: flex
    justify-content center
  
  .blog-iconfont .icon
    padding 0 20px
    margin-top 50px
    width: 3em;
    height: 3em
    fill: currentColor;
    overflow: hidden;
    transition 0.5s all
    &:hover
      transform rotate(360deg)
    
