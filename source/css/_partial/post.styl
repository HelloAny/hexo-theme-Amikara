.post
  margin: 1em auto;
  background-color: #fff;
.posts  
  width: 60%
  padding-left: 20%
  padding-top: 30px
  padding-bottom 30px
  .post-flex
    position relative
    transition .5s all
    &:hover
      transform scale(1.02)
  .post-image
    width 100%
    height 70vh
    .post-cover-back
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-size: cover
      background-position: center
  .post-heading
    position absolute
    bottom 0
    display: block;
    background: linear-gradient(transparent, #212121);
    opacity .8
    width: 100%;
    text-align: center
    .post-title 
      font-size: 2em
      .post-title-link 
        color: #ffffff
        text-decoration: none
        a 
          color: #368CCB
          text-decoration: none
    .post-meta 
      color: #ffffff
      font-size 18px
      .icon-pushpin
        width 20
        height 20
        margin-bottom -3px
      .post-tag
        background: #F5F5F5
        text-decoration none
        color #616161
        padding 1px 5px
        border-radius 1em
        transition 0.1s all
        &:hover
          color #212121
          background #ffffff
