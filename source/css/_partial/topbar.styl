.topbar
  position: relative
  top: 0
  left 0
  height 15vh
  width: 100%
  z-index 1
  .topbar-container
    background: transparent
    height 100%
    .topbar-cover
      height 100%
      width: 100%
      display: flex
      justify-content space-between
      .topbar-back
        height 100%
        .icon
          cursor pointer
          position relative
          top 30
          left 30%
          width: 3rem;
          height: 3rem
          fill: currentColor;
          overflow: hidden;
      .topbar-info
        height 100%
        .icon
          cursor pointer
          position relative
          top 30
          right 30
          width: 3rem;
          height: 3rem
          fill: currentColor;
          overflow: hidden;
          transition: .2s all ease
          &:hover
            transform: rotate(90deg)

